<style>
  <% if @theme.title_font_url? && @theme.title_font_family? %>
    @import url(<%= @theme.font_url %>);

    h1#title {
      font-family: <%= @theme.title_font_family %>, sans-serif;
    }
  <% end %>

  <% if @theme.title_font_color %>
    h1#title {
      color: <%= @theme.title_font_color %>;
    }
  <% end %>

  <% if @theme.font_url? && @theme.font_family? %>
    @import url(<%= @theme.font_url %>);

    h1:not(#title), div, a, p {
      font-family: <%= @theme.font_family %>, sans-serif;
    }
  <% end %>

  <% if @theme.nav_background_color? %>
    #nav-ul {
      background-color: <%= @theme.nav_background_color %>;
    }
  <% end %>

  <% if @theme.nav_hover_background_color? %>
    #nav-ul li:hover {
      background: <%= @theme.nav_hover_background_color %>;
    }
  <% end %>

  <% if @theme.nav_text_color? %>
    nav a {
      color: <%= @theme.nav_text_color %>;
    }
  <% end %>

  <% if @theme.main_background_color? %>
    body, input, textarea {
      background-color: <%= @theme.main_background_color %>;
    }

    h1#title, #footer {
      color: <%= @theme.main_background_color %>;
    }
  <% end %>

  <% if @theme.content_background_color? %>
    #content {
      background-color: <%= @theme.content_background_color %>;
    }
  <% end %>

  <% if @theme.content_text_color? %>
    #content {
      color: <%= @theme.content_text_color %>;
    }

    div.section:not(:last-of-type) {
      border-bottom: 1px solid <%= @theme.content_text_color %> !important;
    }

    div.post:not(:last-of-type) {
      border-bottom: 1px solid <%= @theme.content_text_color %> !important;
    }
  <% end %>

  <% if @theme.border_color? %>
    /*#content {
      border: none !important;
      -webkit-box-shadow: inset 3px 3px 0 0 <%= @theme.border_color %>;
      -moz-box-shadow:    inset 3px 3px 0 0 <%= @theme.border_color %>;
      box-shadow:         inset 3px 3px 0 0 <%= @theme.border_color %>;
    }*/

    h1#title {
      background-color: <%= @theme.border_color %>;
    }

    html {
      background-color: <%= @theme.border_color %>;
    }

    body {
      border: none !important;
      -webkit-box-shadow: inset 100px 0 0 0 <%= @theme.border_color %>, inset -100px 0 0 0 <%= @theme.border_color %>;
      -moz-box-shadow:    inset 100px 0 0 0 <%= @theme.border_color %>, inset -100px 0 0 0 <%= @theme.border_color %>;
      box-shadow:         inset 100px 0 0 0 <%= @theme.border_color %>, inset -100px 0 0 0 <%= @theme.border_color %>;
    }

    input, textarea {
      border: none !important;
      -webkit-box-shadow: inset 2px 2px 0 0 <%= @theme.border_color %>;
      -moz-box-shadow:    inset 2px 2px 0 0 <%= @theme.border_color %>;
      box-shadow:         inset 2px 2px 0 0 <%= @theme.border_color %>;
    }

    input:focus, textarea:focus {
      -webkit-box-shadow: inset 4px 4px 0 0 <%= @theme.border_color %>;
      -moz-box-shadow:    inset 4px 4px 0 0 <%= @theme.border_color %>;
      box-shadow:         inset 4px 4px 0 0 <%= @theme.border_color %>;
    }

    #footer {
      background: <%= @theme.border_color %>;
    }

    div.section:not(:last-of-type) {
      border-bottom: 1px solid <%= @theme.border_color %>;
    }

    div.post:not(:last-of-type) {
      border-bottom: 1px solid <%= @theme.border_color %>;
    }
  <% end %>
</style>

<script>
  $(document).ready(function(){
    var nav_background_color = "<%= @theme.nav_background_color %>"
    if (nav_background_color.length > 0) {
      $('button.hamburger').css('background', nav_background_color)
    }
  });
</script>
