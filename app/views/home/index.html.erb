<div class="pure-g">
  <div class="pure-u-md-1-12 pure-u-lg-1-8 page-margin"></div>
  <div class="pure-u-1 pure-u-md-5-6 pure-u-lg-3-4">

    <nav>
      <ul id="nav-ul">
        <% @pages&.each do |page| %>
          <%= link_to display_content_path(page_name: 'page', page_id: page.id), :remote => true do %>
            <li><%= page.title %></li>
          <% end %>
        <% end %>
      </ul>

      <div class="hamburger-container">
        <button class="hamburger hamburger--emphatic" type="button">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
        </button>
      </div>
    </nav>

    <h1 id="title"><%= @site&.title || 'Your Site Title' %></h1>

    <div id="content">
      <% if @page %>
        <%= render partial: 'home/page', :locals => { page: @page } %>
      <% end %>
    </div>
  </div>

  <% if @site&.photos&.any? %>
    <%= variable_image_tag(@site.photos[0], :medium, 'logo-image') %>
  <% end %>

  <div class="pure-u-md-1-12 pure-u-lg-1-8 page-margin"></div>
</div>
