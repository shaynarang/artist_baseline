<div class="pure-g">
  <header class="pure-u-1">
    <h1 id="title">
      <%= @site&.title || 'Your Site Title' %>
    </h1>

    <nav>
      <div class="hamburger-container">
        <button class="hamburger hamburger--emphatic" type="button">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
        </button>
      </div>

      <ul id="nav-ul">
        <% @pages&.each do |page| %>
          <% path = display_content_path(page_name: 'page', page_id: page.id) %>
          <%= link_to path, :remote => true do %>
            <li><%= page.title %></li>
          <% end %>
        <% end %>
      </ul>
    </nav>
  </header>

  <div id="content" class="pure-u-1 pure-u-md-1 pure-u-lg-3-4">
    <% if @page %>
      <div>
        <%= render partial: 'home/page', :locals => { page: @page } %>
      </div>
    <% end %>
  </div>

  <% if @site&.photos&.any? %>
    <div>
      <%= variable_image_tag(@site.photos[0], :medium, 'logo-image') %>
    </div>
  <% end %>
</div>
