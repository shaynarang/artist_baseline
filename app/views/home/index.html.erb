<div class="pure-g">
  <div class="pure-u-1-5 page-margin"></div>
  <div class="pure-u-1-1 pure-u-sm-1-1 pure-u-md-3-5">
    <nav class="pure-g">
      <div class="pure-u-1-1">
        <ul>
          <div class="div-padding">
            <% @pages&.each do |page| %>
              <li><%= link_to page.title, display_content_path(page_name: 'page', page_id: page.id), :remote => true %></li>
            <% end %>
          </div>
        </ul>
      </div>

      <div class="pure-u-1-1">
        <div class="div-padding hamburger-container">
          <button class="hamburger hamburger--emphatic" type="button">
            <span class="hamburger-box">
              <span class="hamburger-inner"></span>
            </span>
          </button>
        </div>
      </div>
    </nav>

    <div id="content-container">
      <div id="logo">
        <% if @site&.photos.any? %>
          <%= image_tag @site.photos[0]&.image&.url(:thumb), height: '100' %>
        <% else %>
          <h1><%= @site&.title || 'Your Site Title' %></h1>
        <% end %>
      </div>

      <div id="content" class="pure-g">
        <% if @page %>
          <%= render partial: 'home/page', :locals => { page: @page } %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="pure-u-1-5 page-margin"></div>
</div>
