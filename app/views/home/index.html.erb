<div class="pure-g">
  <div class="pure-u-md-1-12 pure-u-lg-1-6 page-margin"></div>
  <div class="pure-u-1 pure-u-md-5-6 pure-u-lg-2-3">
    <nav>
      <ul id="nav-ul">
        <% @pages&.each do |page| %>
          <li><%= link_to page.title, display_content_path(page_name: 'page', page_id: page.id), :remote => true %></li>
        <% end %>
      </ul>

      <div class="hamburger-container">
        <button class="hamburger hamburger--emphatic" type="button">
          <span class="hamburger-box">
            <span class="hamburger-inner"></span>
          </span>
        </button>
      </div>
    </nav>

    <div id="content-container">
      <div id="header">
        <div id="logo">
          <% if @site&.photos.any? %>
            <% photo = @site.photos[0] %>
            <%= variable_image_tag(photo, :thumb, 'logo-image') %>
          <% else %>
            <h1><%= @site&.title || 'Your Site Title' %></h1>
          <% end %>
        </div>

        <div id="title">
          <h1><%= @site&.title || 'Your Site Title' %></h1>
        </div>
      </div>

      <div id="content">
        <% if @page %>
          <%= render partial: 'home/page', :locals => { page: @page } %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="pure-u-md-1-12 pure-u-lg-1-6 page-margin"></div>
</div>
