<div class="pure-g">
  <div class="pure-u-1-5 page-margin"></div>
  <div class="pure-u-1-1 pure-u-sm-1-1 pure-u-md-3-5">
    <nav class="pure-g">
      <div class="pure-u-1-2">
        <ul>
          <div class="div-padding">
            <% @pages&.each do |page| %>
              <li><%= link_to page.title, display_content_path(section: 'page', page_id: page.id), :remote => true %></li>
            <% end %>
            <li><%= link_to 'News', display_content_path(section: 'news'), :remote => true %></li>
            <li><%= link_to 'Contact', display_content_path(section: 'contact'), :remote => true %></li>
          </div>
        </ul>
      </div>

      <div class="pure-u-1-2">
        <div class="div-padding">
          <button class="hamburger hamburger--emphatic" type="button">
            <span class="hamburger-box">
              <span class="hamburger-inner"></span>
            </span>
          </button>
        </div>
      </div>
    </nav>

    <div id="content" class="pure-g">
      <div class="pure-u-1-1 pure-u-sm-1-2 pure-u-md-1-2">One</div>
      <div class="pure-u-1-1 pure-u-sm-1-2 pure-u-md-1-2">Two</div>
    </div>
  </div>
  <div class="pure-u-1-5 page-margin"></div>
</div>
