<h1>Contact</h1>

<div id="contact_form">
  <%= form_for @message, url: {controller: "messages", action: "create"}, method: "post", :remote => true do |f| %>
    <div class="col-md-12 col-sm-12 col-xs-12 contact_row">
      <div class="field">
        <%= f.label :name %>
        <% if @message.errors[:name] %>
          <span class="contact_form_error">
            <%= @message.errors[:name].to_sentence.downcase.capitalize %>
          </span>
        <% end %>
        <br/>
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12 contact_row">
      <div class="field">
        <%= f.label :email %>
        <% if @message.errors[:email] %>
          <span class="contact_form_error">
            <%= @message.errors[:email].to_sentence.downcase.capitalize %>
          </span>
        <% end %>
        <br/>
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12 contact_row">
      <div class="field">
        <%= f.label :subject %>
        <% if @message.errors[:subject] %>
          <span class="contact_form_error">
            <%= @message.errors[:subject].to_sentence.downcase.capitalize %>
          </span>
        <% end %>
        <br/>
        <%= f.text_field :subject %>
      </div>
    </div>
    <div class="col-md-12 col-sm-12 col-xs-12 contact_row">
      <div class="field">
        <%= f.label :content, "Message" %>
        <% if @message.errors[:content] %>
          <span class="contact_form_error">
            <%= @message.errors[:content].to_sentence.downcase.capitalize %>
          </span>
        <% end %>
        <br/>
        <%= f.text_area :content %>
      </div>
      <div class="actions">
        <%= f.submit "Send Message", :id => "contact_form_submit_button", :value => "SEND" %>
      </div>
    </div>
  <% end %>
</div>
