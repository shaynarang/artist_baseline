<div class="pure-g">
  <div class="pure-u-1-1">
    <h1><%= @page&.title %></h1>

    <% @page&.texts&.order(:priority).each do |text| %>
      <%= text.content %>
    <% end %>

    <% @page&.snippets&.order(:priority).each do |snippet| %>
      <%= snippet.content.html_safe %>
    <% end %>

    <script>
      <% ad_removal_script = "$('li.juicer-ad').css('cssText', 'display: none !important;'); $('h1.referral').css('cssText', 'display: none !important;')" %>
      setTimeout(function(){ <%= ad_removal_script.html_safe %> }, 300);
    </script>
  </div>
</div>
