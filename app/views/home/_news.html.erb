<div class="pure-g">
  <div class="pure-u-1-1">
    <h1>News</h1>

    <% @posts.each do |post| %>
      <p>Date: <%= post.created_at %></p>
      <p>Title: <%= post.title %></p>
      <p>Author: <%= post.author %></p>
      <p>Content: <%= post.content %></p>
      <hr>
    <% end %>
  </div>
</div>
