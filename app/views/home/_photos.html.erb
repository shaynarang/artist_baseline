<div class='pure-g'>
  <% if photos.count > 1 %>
    <% photos.each do |photo| %>
      <% if photo&.image&.url %>
        <div class="pure-u-md-1-2 pure-u-lg-1-2 image-container">
          <%= variable_image_tag(photo, :medium) %>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <% photos.each do |photo| %>
      <% if photo&.image&.url %>
        <div class="image-container">
          <%= variable_image_tag(photo, :large) %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
