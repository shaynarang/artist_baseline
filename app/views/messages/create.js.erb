<% if @message.valid? %>
  $(".actions").hide();
  $(".actions").css({"color": "mintcream", "background-color": "black", "width": "inherit", "padding": "2% 0", "text-align": "center"});
  $(".actions").html("Thanks for the message.");
  $(".actions").fadeIn("medium");
<% else %>
  $(".contact_form_error").hide();
  $(".contact_form_error").fadeIn("medium");
<% end %>
